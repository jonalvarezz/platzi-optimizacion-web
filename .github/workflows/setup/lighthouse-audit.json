{
  "ci": {
    "collect": {
      "startServerCommand": "npm run serve",
      "startServerReadyPattern": "running",
      "puppeteerScript": "./puppeteer-login.js",
      "settings": {
        "disableStorageReset": true
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.7 }],
        "first-contentful-paint": ["error", { "minScore": 0.7 }],
        "interactive": ["error", { "maxNumericValue": 1500 }],
        "resource-summary:font:count": ["error", { "maxNumericValue": 1 }],
        "resource-summary:script:size": [
          "error",
          { "maxNumericValue": 150000 }
        ],
        "resource-summary:stylesheet:size": [
          "error",
          { "maxNumericValue": 100000 }
        ]
      }
    }
  }
}
