{
  "ci": {
    "collect": {
      "startServerCommand": "npm run serve",
      "startServerReadyPattern": "running",
      "settings": {
        "extraHeaders": "{\"Cookie\": \"authinfo=1234567\"}"
      }
    },
    "assert": {
      "assertions": {
        "preset": "lighthouse:recommended",
        "categories:performance": ["error", { "minScore": 0.8 }],
        "first-contentful-paint": ["error", { "minScore": 0.8 }],
        "interactive": ["error", { "maxNumericValue": 5000 }],
        "resource-summary:font:count": ["error", { "maxNumericValue": 1 }],
        "resource-summary:script:size": [
          "error",
          { "maxNumericValue": 150000 }
        ],
        "resource-summary:stylesheet:size": [
          "error",
          { "maxNumericValue": 100000 }
        ]
      }
    }
  }
}
